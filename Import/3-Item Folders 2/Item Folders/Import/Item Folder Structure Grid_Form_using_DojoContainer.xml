      <html_code><![CDATA[<script type="text/javascript">
	// Generic TreeView - HTML-code - adapted for Aras Innovator 10
	// This is a skeleton, only.
	// Additional functions will need to provide the logic for populating the gride
    // These methods must be loaded with the form this html field is on. FormEvent = onLoad
	//
	// They must contain these functions:
	//	 window.RefreshGrid(doInit)
	//	 window.loadGridToolbar1()
	//
	// And they must contain function for the Click Handlers treeGrid1_XXXX ()  listed at the bottom section of this skeleton.
	//
	//
	// ====================================================================================================================
	var toolbar1_Control = null;
	var treeGrid1_Control = null;
	var I18Ncntx = document.thisItem? document.thisItem.getInnovator().getI18NSessionContext() : null;
	var treeGrid1_MsgsId;
	var OnLoadMethodsLoaded = false;

	top.aras.uiAddConfigLink2Doc4Assembly(document, "TreeTable");
	top.aras.uiAddConfigLink2Doc4Assembly(document, "Toolbar");

	function initForm()
	{
		if (!window.RefreshGrid)
		{
			setTimeout('initForm()',10);
			return;
		}
		var res = window.RefreshGrid(true);
	}

	function initToolbar()
	{
		if (window.onload1)
			onload1();  //handler method must be attached to 1st onLoad event of this Form
		if (window.onload2)
			onload2();  //handler method must be attached to 1st onLoad event of this Form
		if (window.onload3)
			onload3();  //handler method must be attached to 1st onLoad event of this Form
		if (window.onload4)
			onload4();  //handler method must be attached to 1st onLoad event of this Form
		OnLoadMethodsLoaded = true;
		if (window.loadGridToolbar1)
			var res = window.loadGridToolbar1();
	}

	var onload_handler = function()
	{
		interval = window.setInterval(fixGridHeight, 100);
		window.attachEvent("onbeforeunload", onbeforeunload_handler);
	}

	var onresize_handler = function ()
	{
		fixGridHeight();
	}

	var onbeforeunload_handler = function ()
	{
		if (window.interval)
		{
			clearInterval(interval);
		}
	}

	function fixGridHeight()
	{
		var el = document.getElementById("treeGrid1");
		top.aras.fixLiquidContainerHeight(document, el);
		el = document.getElementById("grid_td");
		top.aras.fixLiquidContainerHeight(document, el);
	}

	window.attachEvent("onload", onload_handler);
	window.attachEvent("onresize", onresize_handler);
</script>

